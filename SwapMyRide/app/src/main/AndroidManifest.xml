        <activity
            android:name=".View.SearchFriendsActivity"
            android:label="@string/title_activity_search_friends"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".View.AddFriendProfileActivity"
            android:label="@string/title_activity_add_friend_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".View.ViewFriendProfileActivity"
            android:label="@string/title_activity_view_friend_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".View.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".View.FeedTradeUserActivity"
            android:label="@string/title_activity_feed_trade_user"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".View.ViewPendingTradesActivity"
            android:label="@string/title_activity_view_pending_trades"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
